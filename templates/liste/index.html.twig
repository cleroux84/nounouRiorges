{% extends 'base.html.twig' %}

{% block title %}Hello ListeController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

{% for listeUser in listeUsers %}
<div class="card" style="width: 18rem;">
  <div class="card-body">
    <h5 class="card-title">{{listeUser.nom}}</h5>
    <p class="card-text">{{listeUser.prenom}}</p>
    <p class="btn btn-primary">{{ listeUser.ville }}</p>
    <a class="btn btn-md primary border waves-effect waves-dark" href="{{ path('profils_show', {'id': listeUser.id}) }}">Details</a>
  </div>
</div>
{% endfor %}
 <div class="card">
    <img class="card-img-top photoIdentite" src="assets/images/photoExemple.jpg" alt="Card image cap">
    <div class="card-body">
      <h5 class="card-title">Card title</h5>
      <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
      <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
    </div>
  </div>

{% endblock %}
